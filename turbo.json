{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_VERSION", "BLOB_READ_WRITE_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "outputs": ["coverage/**"]
    },
    "typecheck": {}
  }
}

