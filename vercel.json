{
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  },
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm -w build && if [ -d apps/web/dist ]; then echo 'Monorepo root detected, copying apps/web/dist -> dist'; rm -rf dist && mkdir -p dist && cp -a apps/web/dist/. dist/; else echo 'apps/web root detected, skipping copy'; fi",
  "framework": "vite",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cross-Origin-Embedder-Policy", "value": "require-corp" },
        { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}